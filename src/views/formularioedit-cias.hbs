<div class="content-div-main-index"  >
  <div class="div-main-index" style="flex-direction:column; color:#fff;"  >
    <h2>Editando Caracteristicas</h2>
    <form
      action="/entrar/login/get/{{this.id}}/editar/cia"
      method="POST"
      enctype="multipart/form-data"
      class="form-add-moto"
    >

      <div class="nueva-moto">
        <div class="content-nueva-moto">
          <input type="text" name="caracteristica" placeholder="Modelo de moto" value="{{cia.caracteristica}}" />
          <textarea
            name="descripcion" 
          >{{cia.descripcion}}</textarea>
          <p>ruta de imagen: {{cia.path}}</p>
        </div>
      </div>

      

      <button style="margin-top: 10px;">Actualizar</button>
    </form>

    <a href="/preInsertar/caracteristicas" class="btns">cancelar</a>
  </div>

</div>