<div class="content-div-main-index" style="overflow: hidden;">
  <div class="div-main-index" style="flex-direction: column;">
    <!--CONTENEDOR DE LAS MOTOS-->
    <div class="content-moto">
      <div class="contentSlider">
        <div class="content-moto-2 slider">
          {{#each todasLasMotos}}
            <div class="content-card">
              <div class="card-moto sliderSection">
                <div class="details-moto">

                  <div
                    style="display: flex; flex-direction:column; width:50%; gap:20px"
                  >
                    <h3>Modelo: "{{modelo}}"</h3>
                    <p>Descripcion : {{descripcion}}</p>
                    <p>ID:{{_id}}</p>
                  </div>
                  <div style="width:50%;">
                    <img class="img-motos" src="/{{path}}" alt="" />
                  </div>
                </div>
                <div class="content-btn-moto">
                  <a
                    href="/entrar/login/get/{{this._id}}/delete"
                    class="btns-card"
                  >Eliminar</a>
                  <a
                    href="/entrar/login/get/{{this._id}}/editar"
                    class="btns-card"
                  >Editar</a>
                </div>
              </div>
            </div>
          {{/each}}

        </div>
        {{! <div class="btn-slider left">></div>
        <div class="btn-slider right"><</div> }}
      </div>
    </div>
    <!--CONTENEDOR DE LOS BOTONES-->
    <div class="btns-motos">

      <a href="/entrar/login/get/primera"><i class="fa-solid fa-motorcycle">First bike</i> </a>
      <a href="/entrar/login/get/ultima"><i class="fa-solid fa-magnifying-glass">Last bike</i></a>

      <a href="/entrar/login/motosp/insertar"><i class="fa-solid fa-plus">Agregar</i></a>
      <a href="/entrar/login/motosp/mostrarbd"><i class="fa-solid fa-database">Consult</i></a>
      <a href="/preInsertar"><i class="fa-solid fa-backward">Exit</i></a>

    </div>
  </div>

</div>